<!DOCTYPE html>
<html>
  <head>
    <title>Product Lists</title>
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/products/create">Create product</a></h3>
      <h1>Product List</h1>
      <% if(product.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Product Desc</th>
            <th>Product Category</th>
            <th>Product Price</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<product.length;i++) { %>
            <tr>
              <td><a href="/products/show/<%= product[i]._id%>"><%= product[i].title%></a></td>
              <td><%= product[i].desc%></td>
              <td><%= product[i].category%></td>
              <td><%= product[i].price%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No products found.</div>
      <% } %>
    </div>
  </body>
</html>
